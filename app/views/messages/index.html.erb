<div class="container">
  <div class="row">
    <h1>留言信息</h1>

    <table class="table table-striped table-bordered table-hover">
      <thead>
        <tr>
          <th class="col-md-2">&nbsp;手机号码  <span class="glyphicon glyphicon-phone-alt"></span></th>
          <th class="col-md-2">&nbsp;Email地址 <span class="glyphicon glyphicon-envelope"></span></th>
          <th class="col-md-6">&nbsp;留言信息 <span class="glyphicon glyphicon-comment"></span></th>
          <th class="col-md-2">留言时间</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @messages.each do |message| %>
          <tr>
            <td class="col-md-2"><%= message.phone %></td>
            <td class="col-md-2"><%= message.email %></td>
            <td class="col-md-6"><%= message.message %></td>
            <td class="col-md-2"><%= message.created_at %></td>
            <td><%= link_to '删除', message, class: "btn btn-sm btn-warning", method: :delete, data: { confirm: '确定要删除?'} %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>
  </div>
</div>
